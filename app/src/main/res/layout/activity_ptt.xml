<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ptt"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        tools:context="com.gauravs.pdfcreator.ptt">


    <TextView
        android:text="Choose A PDF File And Convert it into Text File"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:id="@+id/textView5" />

    <com.startapp.android.publish.ads.banner.Banner
        android:id="@+id/startAppBanner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        />


    <Button
        android:text="Choose A PDF File"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/chf"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:background="#2035E9"
        android:textColor="#ffffff"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="14dp" />

    <Button
        android:text="Save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/save"
        android:background="#2035E9"
        android:textColor="#ffffff"

        android:layout_marginBottom="62dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/textView5"
        android:layout_alignEnd="@+id/textView5" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"

        android:ems="10"
        android:id="@+id/Text"
        android:paddingBottom="60dp"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_alignRight="@+id/save"
        android:layout_alignEnd="@+id/save"
        android:layout_above="@+id/save"
        android:layout_below="@+id/chf" />


</RelativeLayout>
